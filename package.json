{
  "name": "bloglist_backend",
  "version": "1.0.0",
  "description": "follow up on the fullstack open blog list exercise",
  "main": "./src/index.js",
  "scripts": {
    "start": "NODE_ENV=production node index.js",
    "dev": "NODE_ENV=development nodemon index.js",
    "test": "NODE_ENV=test jest --verbose --runInBand --forceExit",
    "build:ui": "rm -rf dist && cd ../frontend && npm run build:ui",
    "lint": "eslint \"src/**/*.js\"",
    "lint:fix": "eslint \"src/**/*.js\" --fix",
    "format": "prettier \"src/**/*.js\"",
    "format:fix": "prettier \"src/**/*.js\" --write"
  },
  "author": "immanuel toby",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "mongoose": "^6.5.4"
  },
  "devDependencies": {
    "supertest": "^6.2.4"
  },
  "jest": {
    "testEnvironment": "jest-environment-node",
    "testTimeout": 9999
  },
  "eslintConfig": {
    "ignorePatterns": [
      "node_modules/",
      "dist/",
      "_*/"
    ]
  },
  "prettier": {
    "ignore": [
      "node_modules/",
      "dist/",
      "_*/"
    ]
  }
}
